/* Card */
/* Basic Structure */
.card {
	/* border-radius always cause the child element overflow,
	card__header is overflow, set the container overflow to hidden */
	overflow: hidden;
	border-radius: 7px;
	/* box-shadow: horizontal vertical blur spread color */
	box-shadow: 0 0 20px 10px #f3f3f3;
	/* apply the same padding to header and body, componet will align properly*/
	&__header,
	&__body {
		padding: 2rem 7%;
	}

	/* Skin */
	&--primary {
		/* 
		If element has .card--primary, the .card__header should have
		background blue and color white
	*/
		.card__header {
			background-color: var(--color-primary);
			color: #ffffff;
		}
		/* This is for plan components */
		.badge--primary {
			background-color: #126de4;
		}
	}

	&--secondary {
		.card__header {
			background-color: var(--color-secondary);
			color: #ffffff;
		}

		.badge--secondary {
			background-color: #02cdf1;
		}
	}
}
