/* Button */
/* $varColor: red; */

.btn {
	/* Define the basic structure */
	margin: 1rem 0;
	/* 4vw: 4% of the width of the viewport */
	padding: 2rem 4vw;
	outline: 0;
	border: 0;
	border-radius: 40px;
	text-align: center;
	text-transform: uppercase;
	white-space: nowrap;
	font-weight: 600;
	font-size: 1.8rem;
	cursor: pointer;

	@mixin lg {
		font-size: 1.5rem;
	}

	.icon {
		margin-right: 1rem;
		width: 2rem;
		height: 2rem;
		vertical-align: middle;
	}

	/* Using Modifier to define skin */
	&--block {
		display: inline-block;
		/* inline-block, width will work, set to 100% to expend to full width */
		width: 100%;
	}

	&--outline {
		border: 2px solid var(--color-headings);
		background-color: #ffffff;
		color: var(--color-headings);

		/* todo: fix it */
		/* color: $varColor; */

		&:hover {
			background-color: var(--color-headings);
			color: #ffffff;
		}
	}

	&--stretched {
		padding-right: 6rem;
		padding-left: 6rem;
	}

	&--primary {
		background-color: var(--color-primary);
		color: #ffffff;
	}

	&--primary:hover {
		/* background-color: #3a8ffd; */
		background: color(var(--color-primary) tint(20%));
	}

	&--secondary {
		background-color: var(--color-secondary);
		color: #ffffff;
	}

	&--secondary:hover {
		background-color: #00c8eb;
	}

	&--accent {
		background-color: var(--color-accent);
		color: #ffffff;
	}

	&--accent:hover {
		background-color: #ec3000;
	}
}
