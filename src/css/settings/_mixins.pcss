@define-mixin sm {
	/* If screen is large than 478px */
	@media screen and (min-width: 640px) {
		@mixin-content;
	}
}

@define-mixin md {
	@media screen and (min-width: 768px) {
		@mixin-content;
	}
}

@define-mixin lg {
	@media screen and (min-width: 1024px) {
		@mixin-content;
	}
}

@define-mixin xl {
	@media screen and (min-width: 1280px) {
		@mixin-content;
	}
}

@define-mixin 2xl {
	@media screen and (min-width: 1563px) {
		@mixin-content;
	}
}
